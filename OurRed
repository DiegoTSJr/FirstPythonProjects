#continuaOno

continuar = True

while continuar == True:
 while continuar:
     # Solicitamos opción al usuario
     que_hacer = str(input("¿Que deseas hacer? Puedes escribir (S), modificar datos (M) o salir (Salir)"))
     if que_hacer == " S" or que_hacer == " s" or que_hacer == "":
         mensaje = input("¿Qué piensas hoy? ")
         print(nombre, "dice:", mensaje)
     elif que_hacer == " M" or que_hacer == " m":
        modificar_datos = str(input("Deseas modificar datos? S/N"))
        if modificar_datos == " S" or modificar_datos == " s":
            modificar_datos = str(input("¿Que deseas modificar?"))
        if modificar_datos == " Nombre" or modificar_datos == " nombre":
            nombre = str(input("¿Que nombre deseas utilizar?"))
        elif modificar_datos == " Edad" or modificar_datos == " edad":
            edad = str(input("¿Que edad tienes?"))
        elif modificar_datos == " Nacionalidad" or modificar_datos == " nacionalidad":
            nacionalidad = str(input("¿Cual es tu nacionalidad?"))
        elif modificar_datos == " Residencia" or modificar_datos == " residencia":
            residencia = str(input("¿Donde resides ahora?"))
        elif modificar_datos == " Cantidad de amigos" or modificar_datos == " cantidad de amigos" or modificar_datos == " amigos" or modificar_datos == " Amigos":
            amigos = str(input("¿Cuantos amigos tienes ahora?"))
        elif modificar_datos == "Hobbies" or modificar_datos == "hobbies" or modificar_datos == "Hobbie" or modificar_datos == "hobbie":
            hobbies = str(input("¿Tienes un nuevo Hobbie? Añadelos para relacionarte con mas usuarios"))
     elif que_hacer == " Salir" or que_hacer == " salir":
         print("Has decidido salir, hasta pronto!")
         continuar = False
